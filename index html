<body>

    <div class="container">
        <div class="gif-space">ðŸ¥º</div>
        <h1 id="question">Will you be my Valentine?</h1>
        
        <div class="buttons">
            <button id="yesBtn" onclick="celebrate()">Yes</button>
            <button id="noBtn" onclick="makeYesBigger()">No</button>
        </div>
    </div>

    <script>
        let yesSize = 18;
        let noClicks = 0;
        const noTexts = [
            "Are you sure?", 
            "Really sure??", 
            "Think again!", 
            "Last chance!", 
            "Surely not?", 
            "You're breaking my heart ;("
        ];

        function makeYesBigger() {
            // Increase font size of Yes button
            yesSize += 30; 
            document.getElementById('yesBtn').style.fontSize = yesSize + "px";
            document.getElementById('yesBtn').style.padding = (yesSize/2) + "px " + yesSize + "px";
            
            // Change No button text
            if (noClicks < noTexts.length) {
                document.getElementById('noBtn').innerText = noTexts[noClicks];
            } else {
                document.getElementById('noBtn').innerText = "Fine, I'll stop... Joking! Click Yes!";
            }
            noClicks++;
        }

        function celebrate() {
            document.body.innerHTML = `
                <div style="text-align:center;">
                    <div style="font-size:100px;">ðŸ’–</div>
                    <h1 style="color:#ff4d6d; font-size:40px;">YAY! See you soon!</h1>
                </div>
            `;
            document.body.style.backgroundColor = "#ffccd5";
        }
    </script>
</body>
